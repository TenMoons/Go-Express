page {
  height: 100%;
  background-color: #f5f5f5;
}

.rowstyle {
  flex-direction: row;
}

.colstyle {
  flex-direction: column;
}

.right {
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: center;

}

.address {
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.personinfo {
  background-color: #fff;
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center
}

.fontsize14 {
  font-size: 28rpx;

}

.flexItem {
  display: flex;
}

.mt20 {
  margin-bottom: 20rpx;
}

.mod-a {
  padding: 0 20rpx;
  border: 1px solid #f0f0f0;
  background-color: #fff;
}

.remark{
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.mod {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 20rpx;
}

.t-address,
.t-sign-time,
.t-time {
  border-bottom: 1px solid #f5f5f5;
}

.value {
  color: #b2b2b2;
  width: 100%;
  height: 90rpx;
}

.t-sign-time .value {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.mod-big {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 200rpx;
  padding: 0 20rpx;
  position: relative;
}

.chnumber {
  position: absolute;
  right: 0;
  bottom: 0;
  color: #b2b2b2;
  text-align: right;
}

.arrow-r {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.Submit {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  color: #676767;
}

.submit-btn {
  background: #fff;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  align-items: center;
  margin: 10rpx auto;
}

.button {
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #f3f3f3;
  color: #3963BC;
  border-radius: 20px;
  border: 1rpx solid #3963BC
}

.style-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
}

.toastbg {
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  position: absolute;
  opacity: 1;
  width: 80%;
  margin-left: 10%;
  margin-top: 40%;
  z-index: 999;
}

.toast-title {
  background-color: #3963bc;
  color: white;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
}

.toast-button {
  border: none;
  color: #3963bc;
  background-color: white;
}

.tishi {
  background-color: white;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.tishi p {
  display: inline-block;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 40rpx;
  text-align: left;
  width: 96%;
  margin-left: 2%;
}